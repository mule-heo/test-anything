{
  "compilerOptions": {
      "jsx": "react-jsx",
      "lib": ["es6", "dom"],
      "rootDir": "src",
      "outDir": "build",
      "module": "CommonJS",
      "esModuleInterop": true,
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowJs": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}